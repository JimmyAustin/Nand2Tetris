/**
 * Returns the final bit of a 16-bit:
 * out = in + 1
 */
CHIP FirstBit16 {
    IN in[16];
    OUT out;

    PARTS:
    Not(in=in[15], out=nIn15b);
    Not(in=nIn15b, out=out);
}